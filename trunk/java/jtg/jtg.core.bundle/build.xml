<?xml version="1.0" encoding="UTF-8"?>
<project name="org.edgo.jtg.core.bundle" default="build.jars" basedir=".">

	<property name="p2.build.repo" value="file:${buildDirectory}/buildRepo"/>
	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="bundleId" value="org.edgo.jtg.core.bundle"/>
	<property name="bundleVersion" value="1.0.18.201704151406"/>
	<property name="p2.publishonerror" value="false"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="false"/>
	<property name="logExtension" value=".log"/>
	<property name="compilerArg" value=""/>
	<property name="compilation.prereq.log" value="${buildDirectory}/prereqErrors.log"/>
	<property name="javacSource" value="1.3"/>
	<property name="javacTarget" value="1.2"/>
	<condition property="dir_bootclasspath" value="${java.home}/../Classes">
		<and>
			<os family="mac"/>
			<available file="${java.home}/../Classes" type="dir"/>
		</and>
	</condition>
	<property name="dir_bootclasspath" value="${java.home}/lib"/>
	<path id="path_bootclasspath">
		<fileset dir="${dir_bootclasspath}">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>
	<condition property="bundleBootClasspath" value="${JavaSE-1.7}"	>
		<isset property="JavaSE-1.7"/>
	</condition>
	<condition property="bundleJavacSource" value="1.7"	>
		<isset property="JavaSE-1.7"/>
	</condition>
	<condition property="bundleJavacTarget" value="1.7"	>
		<isset property="JavaSE-1.7"/>
	</condition>
	<property name="bundleJavacSource" value="${javacSource}"/>
	<property name="bundleJavacTarget" value="${javacTarget}"/>
	<property name="bundleBootClasspath" value="${bootclasspath}"/>

	<target name="init" depends="properties">
		<condition property="pluginTemp" value="${buildTempFolder}/plugins"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
		<condition property="build.result.folder" value="${pluginTemp}/org.edgo.jtg.core.bundle_1.0.18.201704151406"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
		<condition property="p2.publish.parts" value="true"		>
			<istrue value="${p2.gathering}"/>
		</condition>
		<property name="compilation.problem.marker" value="${build.result.folder}/compilation.problem"/>
		<condition property="compilation.problem.marker.exists" value="true"		>
			<and>
			<available file="${compilation.problem.marker}"/>
			<isfalse value="${p2.publishonerror}"/>
			</and>
		</condition>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>

	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: org.edgo.jtg.core.bundle for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<jar destfile="${plugin.destination}/org.edgo.jtg.core.bundle_1.0.18.201704151406.jar" basedir="${temp.folder}/org.edgo.jtg.core.bundle_1.0.18.201704151406" filesetmanifest="merge"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="build.jars" depends="init" description="Compile classes and build nested jars for the plug-in: org.edgo.jtg.core.bundle.">
		<delete file="${compilation.problem.marker}" quiet="true"/>
	</target>

	<target name="checkCompilationResults" if="compilation.error.occured">
		<echo file="${compilation.problem.marker}" message="org.edgo.jtg.core.bundle_1.0.18.201704151406${line.separator}compilation.error.occured=${compilation.error.occured}"/>
		<eclipse.logCompileError log="${compilation.prereq.log}" bundle="org.edgo.jtg.core.bundle_1.0.18.201704151406">
		</eclipse.logCompileError>
	</target>

	<target name="build.sources" depends="init">
	</target>

	<target name="publish.bin.parts" depends="init" if="p2.publish.parts" unless="compilation.problem.marker.exists">
		<mkdir dir="${build.result.folder}/org.edgo.jtg.core.bundle_1.0.18.201704151406"/>
		<copy todir="${build.result.folder}" failonerror="true" overwrite="true">
			<fileset dir="${basedir}">
				<include name="META-INF/MANIFEST.MF"/>
				<include name="plugin.xml"/>
				<include name="fragment.xml"/>
			</fileset>
		</copy>
		<eclipse.versionReplacer path="${build.result.folder}" version="1.0.18.201704151406"/>
		<antcall target="apitools.generation">
			<param name="projectLocation" value="${basedir}"/>
			<param name="binary.folders" value="D:\home\workspace_java\jtg.core.bundle/lib/FastInfoset-1.2.12.jar;D:\home\workspace_java\jtg.core.bundle/lib/antlr4-runtime-4.5.3.jar;D:\home\workspace_java\jtg.core.bundle/lib/javaparser-1.0.11.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-core-2.2.7.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb2-basics-tools-0.11.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/junit-3.8.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/jackson-core-2.8.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/jackson-annotations-2.8.0.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-api-2.2.11.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-impl-2.2.7.jar;D:\home\workspace_java\jtg.core.bundle/lib/jsr173-api-1.0.jar;D:\home\workspace_java\jtg.core.bundle/lib/slf4j-log4j12-1.7.21.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb2-basics-annotate-1.0.2.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-xjc-2.2.7.jar;D:\home\workspace_java\jtg.core.bundle/lib/jtg.core-1.0.18-SNAPSHOT.jar;D:\home\workspace_java\jtg.core.bundle/lib/commons-lang3-3.4.jar;D:\home\workspace_java\jtg.core.bundle/lib/commons-logging-1.2.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb2-basics-ant-0.11.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/jackson-module-jaxb-annotations-2.8.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/annox-1.0.1.jar"/>
			<param name="projectName" value="${bundleId}_${bundleVersion}"/>
			<param name="target.folder" value="${build.result.folder}"/>
		</antcall>
		<eclipse.gatherBundle 
		   metadataRepository="${p2.build.repo}"
		   artifactRepository="${p2.build.repo}"
		   buildResultFolder="${build.result.folder}"
		   unpack="false"
		   baseDirectory="${basedir}"
		/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.edgo.jtg.core.bundle_1.0.18.201704151406"/>
		<copy todir="${destination.temp.folder}/org.edgo.jtg.core.bundle_1.0.18.201704151406" failonerror="true" overwrite="true">
			<fileset dir="${basedir}">
				<include name="META-INF/"/>
				<include name="build.properties"/>
				<include name="plugin.properties"/>
				<include name="lib/"/>
			</fileset>
		</copy>
		<eclipse.versionReplacer path="${destination.temp.folder}/org.edgo.jtg.core.bundle_1.0.18.201704151406" version="1.0.18.201704151406"/>
		<antcall target="apitools.generation">
			<param name="projectLocation" value="${basedir}"/>
			<param name="binary.folders" value="D:\home\workspace_java\jtg.core.bundle/lib/FastInfoset-1.2.12.jar;D:\home\workspace_java\jtg.core.bundle/lib/antlr4-runtime-4.5.3.jar;D:\home\workspace_java\jtg.core.bundle/lib/javaparser-1.0.11.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-core-2.2.7.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb2-basics-tools-0.11.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/junit-3.8.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/jackson-core-2.8.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/jackson-annotations-2.8.0.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-api-2.2.11.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-impl-2.2.7.jar;D:\home\workspace_java\jtg.core.bundle/lib/jsr173-api-1.0.jar;D:\home\workspace_java\jtg.core.bundle/lib/slf4j-log4j12-1.7.21.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb2-basics-annotate-1.0.2.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb-xjc-2.2.7.jar;D:\home\workspace_java\jtg.core.bundle/lib/jtg.core-1.0.18-SNAPSHOT.jar;D:\home\workspace_java\jtg.core.bundle/lib/commons-lang3-3.4.jar;D:\home\workspace_java\jtg.core.bundle/lib/commons-logging-1.2.jar;D:\home\workspace_java\jtg.core.bundle/lib/jaxb2-basics-ant-0.11.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/jackson-module-jaxb-annotations-2.8.1.jar;D:\home\workspace_java\jtg.core.bundle/lib/annox-1.0.1.jar"/>
			<param name="projectName" value="${bundleId}_${bundleVersion}"/>
			<param name="target.folder" value="${destination.temp.folder}/org.edgo.jtg.core.bundle_1.0.18.201704151406"/>
		</antcall>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}/org.edgo.jtg.core.bundle_1.0.18.201704151406"/>
		</antcall>
	</target>

	<target name="gather.individual.sources" depends="init">
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
	</target>

	<target name="copy.src.includes" depends="init">
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.edgo.jtg.core.bundle of all the zips, jars and logs created.">
		<delete file="${plugin.destination}/org.edgo.jtg.core.bundle_1.0.18.201704151406.jar"/>
		<delete file="${plugin.destination}/org.edgo.jtg.core.bundle_1.0.18.201704151406.zip"/>
		<delete dir="${temp.folder}"/>
		<delete file="${compilation.problem.marker}" quiet="true"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="D:/home/workspace_java/jtg.core.bundle" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.edgo.jtg.core.bundle.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}">
				<include name="**/*.bin${logExtension}"/>
			</fileset>
		</delete>
		<zip destfile="${plugin.destination}/org.edgo.jtg.core.bundle_1.0.18.201704151406.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="apitools.generation" if="generateAPIDescription">
		<apitooling.apigeneration  projectName="${projectName}" project="${projectLocation}" binary="${binary.folders}" target="${target.folder}" extramanifests="${extraManifests}" allownonapiproject="${allowNonApiProject}"		/>
	</target>

</project>
